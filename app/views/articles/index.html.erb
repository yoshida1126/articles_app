<% if @weekly_trend_articles %> 
  <h4 class="search-result">トレンド記事一覧</h4> 
  <ul id="search-or-tagged-articles" class="articles">
    <%= render partial: "articles/shared/search_articles", collection: @weekly_trend_articles, as: "article" %> 
  </ul>  
<% elsif @articles %>
  <h4 class="search-result">最近の投稿一覧</h4> 
  <ul id="search-or-tagged-articles" class="articles">
    <%= render partial: "articles/shared/search_articles", collection: @articles, as: "article" %>
  </ul>
  <div class="pagination">
    <%= will_paginate @articles %> 
  </div>
<% elsif @trend1_tag_articles %>
  <h4 class="search-result"><%= @tag1_name %>
  <ul id="search-or-tagged-articles" class="articles">
    <%= render partial: "articles/shared/search_articles", collection: @trend1_tag_articles, as: "article" %>
  </ul>
  <div class="pagination">
    <%= will_paginate @trend1_tag_articles %> 
  </div>
<% end %>

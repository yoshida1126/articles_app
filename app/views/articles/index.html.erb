<% if @trend_articles %> 
  <% provide(:title, "トレンド記事一覧") %>
  <h4 class="search-result">トレンド記事一覧</h4> 
  <ul id="search-or-tagged-articles" class="articles">
    <%= render partial: "articles/shared/search_articles", collection: @trend_articles, as: "article" %> 
  </ul>  
<% elsif @articles %>
  <% provide(:title, "最近の投稿一覧") %>
  <h4 class="search-result">最近の投稿一覧</h4> 
  <ul id="search-or-tagged-articles" class="articles">
    <%= render partial: "articles/shared/search_articles", collection: @articles, as: "article" %>
  </ul>
  <div class="pagination">
    <%= render partial: "shared/pagination", locals: { object: @articles } %>
  </div>
<% end %>

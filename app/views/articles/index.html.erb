<% if @trend_articles %> 
  <% provide(:title, "トレンド記事一覧") %>
  <h4 class="trend-articles">トレンド記事一覧</h4> 
  <ul id="search-or-tagged-articles" class="articles">
    <%= render partial: "articles/shared/search_articles", collection: @trend_articles, as: "article" %> 
  </ul>  
<% elsif @articles %>
  <% provide(:title, "最近の投稿一覧") %>
  <h4 class="recentry-articles">最近の投稿一覧</h4>
  <%= turbo_frame_tag "search_articles_page_#{@articles.current_page}" do %>
    <ul id="search-or-tagged-articles" class="articles">
      <%= render partial: "articles/shared/search_articles", collection: @articles, as: "article" %>
    </ul>

    <% if @articles.next_page %>
      <%= turbo_frame_tag "search_articles_page_#{@articles.next_page}",
          src: search_path(page: @articles.next_page),
          loading: :lazy,
          class: "infinite-scroll-frame" do %>
        <div class="spinner"></div>
      <% end %>
    <% end %>
  <% end %>
<% end %>

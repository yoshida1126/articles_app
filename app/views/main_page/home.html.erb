<div class="home">
  <% if @weekly_trend_articles.any? %>
    <h4>トレンド記事</h4> 
    <ol class="articles">
      <% @weekly_trend_articles.each do |article| %>
        <li id="article-<%= article.id %>">
          <span class="heading-image">
            <%= link_to article do %>
              <% if article.image.attached? %> 
                <%= image_tag article.image %>
              <% else %> 
                <%= image_tag "/assets/header.png" %> 
              <% end %> 
            <% end %>
          </span>
          <span class="title">
            <%= link_to article do %>
              <%= article.title %>
            <% end %>
          </span>
          <div class="user-profile-img">
            <%= link_to article.user do %>
              <%= image_tag article.user.profile_img if article.user.profile_img.attached? %>
            <% end %>
          </div>
          <div class="name">
            <%= link_to article.user do %>
              <%= article.user.name %>
            <% end %>
          </div>
          <span class="timestamp"> 
            <%= article.created_at.strftime("%Y年%-m月%-d日 %-H:%-M") %>
          </span> 
          <span class="likes_btn_<%= article.id %>">
            <%= render "likes/btn", article: article %>
          </span>
        </li>
      <% end %>
    </ol>
  <% end %>
  <% if @articles.any? %>
    <h4>最近の投稿</h4> 
    <ol class="articles">
      <% @articles.each do |article| %>
        <li id="article-<%= article.id %>">
          <%= link_to article do %>
            <span class="heading-image">
              <% if article.image.attached? %> 
                <%= image_tag article.image %>
              <% else %> 
                <%= image_tag "/assets/header.png" %> 
              <% end %> 
            </span>
            <span class="title"><%= article.title %></span>
          <% end %>
          <%= link_to article.user do %>
            <div class="user-profile-img">
              <%= image_tag article.user.profile_img if article.user.profile_img.attached? %>
            </div>
            <div class="name">
              <%= article.user.name %>
            </div>
          <% end %>  
          <span class="timestamp"> 
            <%= article.created_at.strftime("%Y年%-m月%-d日 %-H:%-M") %>
          </span> 
          <span class="likes_btn_<%= article.id %>">
            <%= render "likes/btn", article: article %>
          </span>
        </li>
      <% end %>
    </ol>
  <% end %>
</div>


<% provide(:title, "会員登録") %>

<div class="row"> 
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: sign_up_path) do |f| %>
      <%= render 'devise/shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %> 

      <%= f.label :email %> 
      <%= f.email_field :email, class: 'form-control' %> 

      <div class="birthday">
        <%= f.label :birthday %>
        <div class="birthday-select">
          <%= f.date_select :birthday, start_year: 1930, end_year: (Time.now.year - 10), include_blank: true, class: 'form-control' %>
        </div>
      </div>

      <%= f.label :introduction %>
      <%= f.text_area :introduction, class: 'form-control' %>

      <%= f.label :password %> 
      <%= f.password_field :password, class: 'form-control' %> 

      <%= f.label :password_confirmation %> 
      <%= f.password_field :password_confirmation, class: 'form-control' %> 

      <%= f.label :profile_img, "プロフィール画像" %>
      <%= f.file_field :profile_img, id: "profile_image_upload", accept: "image/jpeg, image/png, image/gif" %>

      <%= image_tag "profile.jpg", id: "target" %> 
  
      <button id="selected-img-trim" type="button">画像をトリミングする</button>

      <div class="account-create-btn">
        <%= f.submit "登　録", class: "btn btn-primary" %> 
      </div>
    <% end %>
  </div>
</div> 

<div class="modal" id="modal-for-trim">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-bs-toggle="modal"><span>×</span></button>
        <h4 class="modal-title">画像のトリミング</h4>
      </div>
      <div class="modal-body">
        <div class="cropper-area">
         <% if @user.profile_img.attached? %>
           <%= image_tag @user.profile_img, id:"cropper-img" %>
         <% else %>
           <%= image_tag "profile.jpg", id:"cropper-img" %>
         <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button id="crop-btn" type="button" class="btn btn-default">トリミング</button>
      </div>
    </div>
  </div>
</div> 



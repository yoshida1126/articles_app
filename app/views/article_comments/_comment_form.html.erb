<% if current_user.profile_img.attached? %>
  <%= image_tag current_user.profile_img, class: "comment-user-img" %> 
<% else %>
  <%= image_tag "profile.jpg", class: "comment-user-img" %>
<% end %>
  コメントする
<div id="comment-error">
  <% if @error_comment.present? %> 
    <%= render "shared/error_messages", object: @error_comment %>
  <% end %> 
</div>
<%= form_with model: [@article, @comment], local: true, remote: true do |f| %>
  <div class="toolbar comment-toolbar">
    <%= turbo_frame_tag "articles-img" do %>
      <div class="article-image-upload">
        <label>
          <i class="far fa-image"></i>
          <%= f.file_field :images, direct_upload: true, id: "artilce-comment-image-field", accept: "image/jpeg, image/png, image/gif", style: "display: none;", multiple: true, 
            data: { 
              controller: "article-comment-image-upload",
              article_comment_image_upload_url_value: rails_direct_uploads_url,
              article_comment_image_upload_csrf_token_value: form_authenticity_token,
              action: "input->article-comment-image-upload#imageUpload"
            } 
          %>
        </label>
      </div>
    <% end %>
    <div
      id="comment-file-size-bar-container"
      data-controller="header"
      data-header-remaining-value="<%= @remaining_mb %>"
      data-header-max-value="<%= @max_size %>"
    >
      <div class="comment-file-size-bar" data-header-target="bar"></div>
      <span class="comment-file-size-text" data-header-target="quota"></span>
    </div>
    <div class="preview-open">
      <div data-controller="preview-for-comment"  data-action="click->preview-for-comment#preview" class="btn preview-btn">
        <i class="fas fa-book-open"></i>
      </div>
      <div data-controller="preview-for-comment" data-action="click->preview-for-comment#edit" class="btn editor-btn display">
        <i class="fas fa-edit"></i> 
      </div>
    </div>
  </div>
  <div class="text-area-and-preview">
    <div class="comment-editor">
      <%= f.text_area :comment, id: 'markdown_for_comment', class: 'form-control comment-text-area', maxlength: "1500", placeholder: "コメントを入力",
        data: {
          controller: "drop-upload-for-comment preview-for-comment count-comment-text",
          drop_upload_for_comment_url_value: rails_direct_uploads_url,
          action: "drop->drop-upload-for-comment#dropUpload input->preview-for-comment#input input->count-comment-text#count"
        }
      %>
    </div>
    <div id="html", class="html display">
      <div class="preview-placeholder">
        プレビューが表示されます。
      </div>
      <div class="preview-content"></div>
    </div>
  </div>
  
  <%= f.hidden_field :blob_signed_ids, id: 'blob', value: "[]" %>

  <span class="count_comment" id="count_comment_text">0 ／1500文字</span>

  <div class="submit-btn">
    <%= f.submit "送信する", class: "btn", remote: true %> 
  </div>
<% end %> 
<% if @error_comment %>
  <%= turbo_stream.prepend "comment-edit-#{ @article_comment.id }" do %>
    <%= render "shared/error_messages", object: @error_comment, status: :unprocessable_entity %> 
  <% end %>
<% else %>
  <%= turbo_stream.update "article-comment-list" do %> 
    <%= render partial: "article_comments/comment" %>
  <% end %>
<% end %> 

<div class="row"> 
  <div class="col-md-6 col-md-offset-3">
   <h2>リストの作成</h2>
    <%= form_with(model: @favorite_article_list, url: user_favorite_article_lists_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <div class="title-field">
          <%= f.text_field :list_title, class: "form-control", required: true, placeholder: "リストのタイトルを入力してください。" %> 
        </div> 

        <div class="article-submit-btn">
          <%= f.submit "作　成", class: "btn btn-primary" %> 
        </div>
    <% end %>
  </div>
</div> 